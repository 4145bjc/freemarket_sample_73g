.wrapper
  = render "items/header"
  .mainview
    = render "users/side"
    .create-card
      .create-card__contents
        .create-card__contents_head
          %p カード情報登録
        .create-card__contents_form
          = form_tag(pay_card_index_path, method: :post, id: 'charge-form',  name: "inputForm") do
            .create-card__content
              .create-card__content_num
                .create-card__content_num_title
                  %p カード番号
                .create-card__content_num_form
                  = text_field_tag "number", "", class: "number", placeholder: "半角数字のみ" ,maxlength: "16", type: "text", id: "card_number"
              .create-card__content_limit
                .create-card__content_limit_title
                  %p 有効期限
                .create-card__content_limit_form
                  %select#exp_month{name: "exp_month", type: "text"}
                    %option{value: ""} --
                    %option{value: "1"}01
                    %option{value: "2"}02
                    %option{value: "3"}03
                    %option{value: "4"}04
                    %option{value: "5"}05
                    %option{value: "6"}06
                    %option{value: "7"}07
                    %option{value: "8"}08
                    %option{value: "9"}09
                    %option{value: "10"}10
                    %option{value: "11"}11
                    %option{value: "12"}12
                  %span 月/
                  %select#exp_year{name: "exp_year", type: "text"}
                    %option{value: ""} --
                    %option{value: "2019"}19
                    %option{value: "2020"}20
                    %option{value: "2021"}21
                    %option{value: "2022"}22
                    %option{value: "2023"}23
                    %option{value: "2024"}24
                    %option{value: "2025"}25
                    %option{value: "2026"}26
                    %option{value: "2027"}27
                    %option{value: "2028"}28
                    %option{value: "2029"}29
                  %span 年
              .create-card__content_cvc
                .create-card__content_cvc_title
                  %p セキュリティコード
                .create-card__content_cvc_form
                  = text_field_tag "cvc", "", class: "cvc", placeholder: "CVC", maxlength: "4", id: "cvc"
                  %p ※カード背面の３〜４桁の番号です
              #card_token
              = submit_tag "追加する", id: "token_submit"
  = render "items/footer"