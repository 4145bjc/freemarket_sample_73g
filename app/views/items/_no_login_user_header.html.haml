.nologin
  .nologin__main
    .nologin__main__inner
      .nologin__main__inner__icon
        = link_to image_tag "logo/logo.png"
      .nologin__main__inner__key
        = form_with(url: search_items_path, local: true, method: :get) do |s|
          = s.text_field :keyword, placeholder: "キーワードから探す", class: "nologin__main__inner__key__search"
          = s.submit "検索", class: "nologin__main__inner__key__submit"
          = icon("fa", "search", class: "nologin__main__inner__key__icon")
    .nologin__main__bottom
      .login__main__bottom__left
        %ul.login__main__bottom__left__ul
          %li.login__main__bottom__left__ul__list1
            = link_to 'カテゴリー', categories_path, id: 'catBtn'
            = render  "items/nav-category", parent: @parents
          %li.nologin__main__bottom__left__ul__list ブランド
      .nologin__main__bottom__right
        %ul.nologin__main__bottom__right__ul
          %li.nologin__main__bottom__right__ul__list 
          = link_to "ログイン", new_user_session_path
          %li.nologin__main__bottom__right__ul__list 
          = link_to "新規登録", new_user_registration_path
